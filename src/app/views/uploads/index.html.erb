<h1 class="mb-4">Logs de Processamento</h1>

<table class="table table-striped table-bordered align-middle">
  <thead class="table-dark">
    <tr>
      <th class="text-center">Status</th>
      <th>Arquivo</th>
      <th>Mensagem</th>
      <th>Detalhes</th>
      <th class="text-center">Criado em</th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |l| %>
      <tr>
        <!-- status com badge -->
        <td class="text-center">
          <% case l.status %>
          <% when "processed", "success" %>
            <span class="badge bg-success">OK</span>
          <% when "failed", "error" %>
            <span class="badge bg-danger">Erro</span>
          <% else %>
            <span class="badge bg-secondary"><%= l.status %></span>
          <% end %>
        </td>

        <!-- nome do arquivo -->
        <td>
          <strong><%= l&.file_name %></strong>
        </td>

        <!-- mensagem curta -->
        <td style="max-width: 250px; white-space: pre-wrap;">
          <%= l.message.presence || "-" %>
        </td>

        <!-- JSON formatado -->
        <td style="max-width: 350px;">
          <% begin %>
            <pre class="bg-light p-2 border" style="white-space: pre-wrap; font-size: 0.85rem;">
<%= JSON.pretty_generate(l.parsed_json || {}) %></pre>
          <% rescue %>
            <pre class="bg-light p-2 border" style="white-space: pre-wrap; font-size: 0.85rem;">
<%= l.parsed_json.inspect %></pre>
          <% end %>
        </td>

        <!-- data de criação -->
        <td class="text-center">
          <%= l.created_at.strftime('%d/%m/%Y %H:%M:%S') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @logs.empty? %>
  <div class="alert alert-info mt-3">Nenhum log encontrado.</div>
<% end %>
